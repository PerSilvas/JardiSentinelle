{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2022", "esnext.disposable", "dom"],
    "paths": {
      "@kernel/*": ["./Kernel/*"],
      "@core/*": ["./Core/*"],
      "@application/*": ["./Core/Application/*", "./Client/Application/*"],
      "@domain/*": ["./Core/Domain/*"],
      "@infrastructure/*": ["./Core/Infrastructure/*"],
      "@user-interface/*": ["./Core/UserInterface/*"],
      "@assets/*": ["./Assets/*"],
      "@components/*": ["./Assets/Components/*", "./Solution/Client/Components/*"],
      "@modules/*": ["./Modules/*"]
    },
    "moduleResolution": "node",
    "target": "ES2022",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true
  }
}